    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.release_year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.runtime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imdb_score)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.index }) |
            @Html.ActionLink("Details", "Details", new { id = item.index }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.index })
        </td>
    </tr>
}

</table>
